                                                                                <div class="font" style="line-height:18px;color:#787878;font-family:Georgia, Times, serif">
                                                                                    <div style="line-height:18px;color:#787878">
                                                                                    </div>
                                                                                </div>
                                                                                <div class="btn" style="line-height:18px;color:#787878">
                                                                                    </div>
                                                                                </td>

                                                                              <% end %>

                                                                                        <!-- CONTENT end -->
                                                                                        <td width="18" style="padding:0">&nbsp;</td></tr>
                                                                                </table>
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                  <% end %>
                                                                    <!-- 1/3 Column end   -->
