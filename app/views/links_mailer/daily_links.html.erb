                                                                            <!-- CONTENT start -->
                                                                            <td width="169" valign="top" align="left" style="padding:0">
                                                                                <div class="font" style="line-height:18px;color:#787878;font-family:Georgia, Times, serif">
                                                                                    <div style="line-height:18px;color:#787878">
                                                                                      <%= link.title %>
                                                                                      <br>
                                                                                      Shared by <%= User.find(link.sender_id).name %>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="btn" style="line-height:18px;color:#787878">
                                                                                    <a target="_blank" style="color:#4C6B6D;text-decoration:none">
                                                                                        <img src="http://alexpoon.me/perfectTheme/version4/img/more.gif" width="64" height="36" alt="read more" title="read more" border="0" style="display:block"></a>
                                                                                    </div>
                                                                                </td>
                                                                              <% end %>
